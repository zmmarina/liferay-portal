	@description = "This is a test for LPS-123539. As Content Creator, I want to leverage the structures’ translations with fildset when creating a new Web Content"
	@ignore = "true"
	@priority = "5"
	test TranslateWebContentFromStructureWithFieldsetWithFieldGroup {
		property portal.acceptance = "false";

		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(
			structureDescription = "Structure Description Test",
			structureName = "Structure FieldSet Name Test");

		DataEngine.gotoNewFieldset(fieldsetName = "Text Fieldset Test Name");

		DataEngine.addFields(fieldNameList = "Text");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Text",
			fieldFieldLabelEdit = "Text Test");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Text Test",
			fieldHelp = "Help Text");

		DataEngine.addFieldNested(
			fieldFieldLabel = "Text Test Second",
			fieldName = "Text",
			targetFieldLabel = "Text Test");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Text Test Second",
			fieldHelp = "Help Text");

		DataEngine.changeFieldsetLocale(locale = "pt-BR");

		DataEngine.changeFiledsetName(fieldsetName = "Texto Fieldset Nome de Teste");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Text Test",
			fieldFieldLabelEdit = "Texto");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Texto",
			fieldHelp = "Ajuda Texto");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Text Test Second",
			fieldFieldLabelEdit = "Segundo Texto");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Segundo Texto",
			fieldHelp = "Ajuda Texto");

		Click(locator1 = "Modal#SAVE_BUTTON");

		DragAndDrop.javaScriptDragAndDropToBottom(
			key_fieldName = "Text Fieldset Test Name",
			locator1 = "Sidebar#ADD_FIELD_NAME",
			locator2 = "DDMEditStructure#FORM_FIELD_DROP_TARGET");

		WebContentStructures.saveCP();

		NavItem.click(navItem = "Web Content");

		WebContentNavigator.gotoAddWithStructureCP(structureName = "Structure FieldSet Name Test");

		PortletEntry.inputTitle(title = "WC Title Test");

		PortletEntry.publish();

		LexiconEntry.gotoEntryMenuItem(
			menuItem = "Edit",
			rowEntry = "WC Title Test");

		PortletEntry.changeLocale(locale = "pt-BR");

		AssertElementPresent(
			key_fieldFieldLabel = "Texto",
			key_index = "1",
			locator1 = "WCEditWebContent#FIELD_LABEL");

		AssertElementPresent(
			key_fieldFieldHelp = "Ajuda Texto",
			key_fieldFieldLabel = "Texto",
			key_index = "1",
			locator1 = "WCEditWebContent#FIELD_HELP");

		AssertElementPresent(
			key_fieldFieldLabel = "Segundo Texto",
			key_index = "1",
			locator1 = "WCEditWebContent#FIELD_LABEL");

		AssertElementPresent(
			key_fieldFieldHelp = "Ajuda Texto",
			key_fieldFieldLabel = "Segundo Texto",
			key_index = "1",
			locator1 = "WCEditWebContent#FIELD_HELP");
	}

