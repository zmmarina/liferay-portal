	@priority = "4"
	test SetColorFieldAsRequired {
		property portal.acceptance = "false";

		DataEngine.addField(
			fieldFieldLabel = "Color Test",
			fieldName = "Color");

		DataEngine.editFieldRequired(fieldFieldLabel = "Color Test");

		WebContentStructures.saveCP(structureName = "Structure Name Test");

		NavItem.click(navItem = "Web Content");

		WebContentNavigator.gotoAddWithStructureCP(structureName = "Structure Name Test");

		PortletEntry.inputTitle(title = "Web Content Title");

		Button.clickPublish();

		AssertTextEquals(
			key_fieldFieldLabel = "Color Test",
			locator1 = "WCEditWebContent#FIELD_REQUIRED_ALERT",
			value1 = "This field is required.");
	}

