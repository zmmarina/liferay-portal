	@description = "This is a test for LPS-107630. As an App Adm, I want to use an existing fieldset"
	@priority = "4"
	test FieldsetSetAsCollapsible {
		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(structureName = "WC Structure Name");

		DataEngine.addFieldsets(
			createNewFieldset = "true",
			fieldNameList = "Numeric",
			fieldsetLabel = "New Fieldset",
			fieldsetName = "New Fieldset");

		DataEngine.editCollapsible(
			collapsible = "true",
			fieldsetLabel = "New Fieldset");

		WebContentStructures.saveCP();

		WebContentNavigator.gotoEditStructure(structureName = "WC Structure Name");

		AssertVisible(
			key_fieldFieldLabel = "Numeric",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL");

		Click(
			key_fieldsetLabel = "New Fieldset",
			locator1 = "DDMEditStructure#FORM_FIELD_SETS_COLLAPSE_BUTTON");

		AssertNotVisible(
			key_fieldFieldLabel = "Numeric",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL");
	}

	@description = "This is a test for LPS-107630. As an App Adm, I want to use an existing fieldset"
	@ignore = "true"
	@priority = "4"
	test FieldsetSetAsRepeatable {
		property portal.acceptance = "false";

		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(
			structureDescription = "FieldsetRepeatibleTest",
			structureName = "FieldsetRepeatibleTest");

		Navigator.gotoSidebarTab(tabName = "Builder");

		Navigator.gotoNavTab(navTab = "Fieldsets");

		Click(locator1 = "FormViewBuilder#CREATE_NEW_FIELD_SETS");

		DoubleClick(locator1 = "Modal#CREATE_DATE_FIELD");

		Type(
			locator1 = "FormViewBuilder#FIELD_SET_NAME",
			value1 = "FieldsetRepeatibleTest");

		Click(locator1 = "Modal#SAVE_BUTTON");

		DataEngine.addFieldsets(
			fieldsetsLabel = "FieldsetRepeatibleTest",
			fieldsetsName = "FieldsetRepeatibleTest");

		Click(locator1 = "//div[contains(@class,'fieldset')]//label[text()='FieldsetRepeatibleTest']");

		Check.checkToggleSwitch(
			checkboxName = "Repeatable",
			locator1 = "Checkbox#ANY_CHECKBOX");

		WebContentStructures.saveCP(structureName = "FieldsetRepeatibleTest");

		NavItem.gotoWebContent();

		WebContentNavigator.gotoAddWithStructureCP(structureName = "FieldsetRepeatibleTest");

		AssertElementPresent(locator1 = "Button#DUPLICATE");

		Click(locator1 = "Button#DUPLICATE");

		AssertElementPresent(locator1 = "Button#REMOVE_BUTTON");
	}

