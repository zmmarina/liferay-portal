@component-name = "data-engine"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Data Engine";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		JSONGroup.addGroup(groupName = "Test Site Name");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			JSONGroup.deleteGroupByName(groupName = "Test Site Name");
		}
	}

	@description = "This is a test for LPS-122278. As Content Creator, I want to define reusable translations when creating WEM Structures without nested fields or fieldsets"
	@priority = "4"
	test CheckDefaultStructureTitleDisplayedOnStructureList {
		var defaultStructureName = "WC Structure Name EN";
		var defaultStructureName_pt = "WC Structure Name PT";
		var key_urlAppend = "pt/group/test-site-name/~/control_panel/manage?p_p_id=com_liferay_journal_web_portlet_JournalPortlet&p_p_lifecycle=0&p_p_state=maximized&p_p_mode=view&_com_liferay_journal_web_portlet_JournalPortlet_mvcPath=%2Fview_ddm_structures.jsp";

		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(
			structureDescription = "WC Structure Description",
			structureName = "${defaultStructureName}");

		DataEngine.addField(
			fieldFieldLabel = "Text",
			fieldName = "Text");

		PortletEntry.changeLocale(locale = "pt-BR");

		WebContentStructures.addName(structureName = "${defaultStructureName_pt}");

		WebContentStructures.saveCP();

		WebContentStructures.viewCP(structureName = "${defaultStructureName}");

		Navigator.openWithAppendToBaseURL(urlAppend = "${key_urlAppend}");

		AssertTextEquals(
			key_columnName = "name",
			key_tableEntry = "${defaultStructureName_pt}",
			locator1 = "LexiconTable#TABLE_ENTRY_INFO",
			value1 = "${defaultStructureName_pt}");
	}

	@description = "This is a test for LPS-122278. As Content Creator, I want to define reusable translations when creating WEM Structures without nested fields or fieldsets"
	@priority = "4"
	test CheckLanguageSelector {
		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(structureName = "WC Structure Name");

		PortletEntry.viewLocale(locale = "en-US");

		PortletEntry.changeLocale(locale = "pt-BR");

		PortletEntry.viewLocale(locale = "pt-BR");
	}

	@description = "This is a test for LPS-122278. As Content Creator, I want to define reusable translations when creating WEM Structures without nested fields or fieldsets"
	@priority = "4"
	test CheckLocalizationOfFieldsUponLanguageChange {
		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(
			structureDescription = "Test",
			structureName = "Test");

		DataEngine.addField(
			fieldFieldLabel = "Text Test",
			fieldName = "Text");

		PortletEntry.changeLocale(locale = "pt-BR");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Text Test",
			fieldHelp = "Texto teste ajuda");

		WebContentStructures.addName(structureName = "Teste");

		FormViewBuilder.editFieldLabel(
			fieldLabel = "Text Test",
			label = "Texto Teste");

		WebContentStructures.saveCP(structureName = "Test");

		WebContentStructures.viewCP(
			structureDescription = "Test",
			structureName = "Test");

		LexiconEntry.gotoEntry(rowEntry = "Test");

		PortletEntry.changeLocale(locale = "pt-BR");

		AssertTextEquals(
			locator1 = "//label[@class='ddm-label' and contains(text(),'Texto Teste')]",
			value1 = "Texto Teste");

		AssertTextEquals(
			locator1 = "//span[@class='form-text' and contains(text(),'Texto teste ajuda')]",
			value1 = "Texto teste ajuda");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "Teste");
	}

