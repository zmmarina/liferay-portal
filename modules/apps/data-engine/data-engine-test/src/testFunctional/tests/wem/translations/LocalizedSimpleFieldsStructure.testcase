		PortletEntry.changeLocale(locale = "pt-BR");

		AssertTextEquals(
			key_fieldFieldLabel = "Texto Teste",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL",
			value1 = "Texto Teste");

		AssertTextEquals(
			key_fieldFieldLabel = "Texto Teste",
			locator1 = "DDMEditStructure#SETTINGS_TEXT",
			value1 = "Texto teste ajuda");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "Teste");

		PortletEntry.changeLocale(locale = "de-DE");

		AssertTextEquals(
			key_fieldFieldLabel = "Text test German",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL",
			value1 = "Text test German");

		AssertTextEquals(
			key_fieldFieldLabel = "Text test German",
			locator1 = "DDMEditStructure#SETTINGS_TEXT",
			value1 = "Text test help German");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "Test German");
	}

