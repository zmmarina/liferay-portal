	@description = "This is a test for LPS-122278. As Content Creator, I want to define reusable translations when creating WEM Structures without nested fields or fieldsets"
	@priority = "4"
	test DefaultTitlePersistsAfterTranslatingForAnotherLocale {
		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(structureName = "WC Structure Name");

		DataEngine.addField(
			fieldFieldLabel = "Text",
			fieldName = "Text");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Text",
			fieldHelp = "Text Help Text");

		PortletEntry.changeLocale(locale = "pt-BR");

		WebContentStructures.addName(structureName = "Nome da Estrutura WC");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Text",
			fieldFieldLabelEdit = "Texto");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Texto",
			fieldHelp = "Texto de ajuda");

		PortletEntry.changeLocale(locale = "en-US");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "WC Structure Name");

		AssertTextEquals(
			key_fieldFieldLabel = "Text",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL",
			value1 = "Text");

		AssertTextEquals(
			key_fieldFieldLabel = "Text",
			locator1 = "DDMEditStructure#SETTINGS_TEXT",
			value1 = "Text Help Text");

		WebContentStructures.saveCP();

		WebContentStructures.viewCP(structureName = "WC Structure Name");

		WebContentNavigator.gotoEditStructure(structureName = "WC Structure Name");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "WC Structure Name");

		AssertTextEquals(
			key_fieldFieldLabel = "Text",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL",
			value1 = "Text");

		AssertTextEquals(
			key_fieldFieldLabel = "Text",
			locator1 = "DDMEditStructure#SETTINGS_TEXT",
			value1 = "Text Help Text");
	}

	@description = "This is a test for LPS-122278. As Content Creator, I want to define reusable translations when creating WEM Structures without nested fields or fieldsets"
	@priority = "4"
	test DefaultTitlePersistsUponFirstlyTranslatingForAnotherLocale {
		property portal.acceptance = "false";

		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		LexiconEntry.gotoAdd();

		AssertVisible(locator1 = "Sidebar#FORM_BUILDER");

		DataEngine.addField(
			fieldFieldLabel = "Lbltest",
			fieldName = "Text");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Lbltest",
			fieldHelp = "Help Text test");

		PortletEntry.changeLocale(locale = "pt-BR");

		DataEngine.editFieldTip(
			fieldFieldLabel = "Lbltest",
			fieldHelp = "Texto de ajuda");

		FormViewBuilder.editFieldLabel(
			fieldLabel = "Lbltest",
			label = "Lbltest pt");

		WebContentStructures.addName(structureName = "Titulo teste");

		PortletEntry.changeLocale(locale = "en-US");

		WebContentStructures.addName(structureName = "Structure1");

		WebContentStructures.saveCP();

		WebContentStructures.viewCP(structureName = "Structure1");

		LexiconEntry.gotoEntry(rowEntry = "Structure1");

		PortletEntry.changeLocale(locale = "pt-BR");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "Titulo teste");

		WebContentStructures.saveCP();

		WebContentStructures.deleteCP(structureName = "Structure1");
	}

	@description = "This is a test for LPS-122278. As Content Creator, I want to define reusable translations when creating WEM Structures without nested fields or fieldsets"
