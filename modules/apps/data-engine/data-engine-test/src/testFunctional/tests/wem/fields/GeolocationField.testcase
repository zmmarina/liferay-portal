	@description = "This is a test for LPS-98071. As a Developer, I want to Implement the geolocation field type"
	@priority = "3"
	test ShowAndHideGeolocationLabel {
		DataEngine.addField(
			fieldFieldLabel = "Geolocation",
			fieldName = "Geolocation");

		DataEngine.editShowOrHideLabel(
			fieldFieldLabel = "Geolocation",
			showLabel = "true");

		WebContentStructures.saveCP();

		WebContentNavigator.gotoEditStructure(structureName = "My Structure Name 1");

		AssertElementPresent(
			key_fieldFieldLabel = "Geolocation",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL");

		DataEngine.editShowOrHideLabel(
			fieldFieldLabel = "Geolocation",
			showLabel = "false");

		WebContentStructures.saveCP(structureName = "My Structure Name 1");

		WebContentNavigator.gotoEditStructure(structureName = "My Structure Name 1");

		AssertElementNotPresent(
			key_fieldFieldLabel = "Geolocation",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL");
