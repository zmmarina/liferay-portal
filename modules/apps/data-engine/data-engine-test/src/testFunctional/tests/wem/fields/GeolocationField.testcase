	@description = "This is a test for LPS-98071. As a Developer, I want to Implement the geolocation field type"
	@ignore = "true"
	@priority = "5"
	test VerifyRequiredPropertyOfGeolocation {
		property portal.acceptance = "false";

		var key_fieldLabel = "Localization";

		DataEngine.addField(
			fieldFieldLabel = "${key_fieldLabel}",
			fieldName = "Geolocation");

		DataEngine.editFieldRequired(fieldFieldLabel = "${key_fieldLabel}");

		WebContentStructures.saveCP(structureName = "My Structure Name 1");

		WebContentNavigator.gotoEditStructure(structureName = "My Structure Name 1");

		AssertElementPresent(locator1 = "Icon#ASTERISK");

		AssertClick.assertPartialTextClickAt(
			key_fieldFieldLabel = "${key_fieldLabel}",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER",
			value1 = "${key_fieldLabel}");

		Uncheck.uncheckToggleSwitch(
			key_toggleSwitchLabel = "Required Field",
			locator1 = "ToggleSwitch#ANY_TOGGLE_SWITCH");

		WebContentStructures.saveCP(structureName = "My Structure Name 1");

		WebContentNavigator.gotoEditStructure(structureName = "My Structure Name 1");

		AssertElementNotPresent(locator1 = "Icon#ASTERISK");
	}

